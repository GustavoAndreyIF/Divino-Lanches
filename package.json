{
  "name": "divino-lanches",
  "version": "1.0.0",
  "description": "E-commerce site for Divino Lanches",
  "main": "dist/backend/index.js",
  "scripts": {
    "start": "node dist/backend/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/backend/index.ts",
    "copy-html": "cp src/frontend/pages/index.html dist/frontend/pages/index.html",
    "copy-css": "cp src/frontend/styles/main.css dist/frontend/styles/main.css",
    "copy-env": "cp src/backend/config/.env dist/backend/config/.env",
    "build-backend": "tsc --project tsconfig.backend.json",
    "build-frontend": "tsc --project tsconfig.frontend.json",
    "build": "npm run build-backend && npm run build-frontend && npm run copy-html && npm run copy-css && npm run copy-env",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mysql": "^2.15.26",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-generator": "^4.2.0",
    "mysql": "^2.18.1"
  }
}
